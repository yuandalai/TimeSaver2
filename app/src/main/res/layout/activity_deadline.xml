<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/title_deadline"
        layout="@layout/title_deadline"/>

    <TextView
        android:id="@+id/text_deadline"
        android:textStyle="bold"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/accent_white"
        android:text="to do 的具体内容"
        android:background="@color/colorAccent"
        android:layout_below="@+id/title_deadline"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/text_description"
        android:gravity="center_horizontal"
        android:textColor="@color/accent_white"
        android:text="description"
        android:background="@color/colorAccent"
        android:layout_below="@+id/text_deadline"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:id="@+id/choose_date"
        android:layout_below="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="选择日期"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="May 15,2016"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/choose_date"
        android:id="@+id/gray_line1"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/choose_time"
        android:layout_below="@+id/gray_line1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="选择时间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="9:00am - 10:00am"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/choose_time"
        android:id="@+id/gray_line2"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/remind_time"
        android:layout_below="@+id/gray_line2"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="提醒时间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="提前一个小时"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/remind_time"
        android:id="@+id/gray_line3"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/place"
        android:layout_below="@+id/gray_line3"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="地点"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="NONE"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/place"
        android:id="@+id/gray_line4"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/notification"
        android:layout_below="@+id/gray_line4"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="提醒时间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="提前一个小时"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/notification"
        android:id="@+id/gray_line5"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>
