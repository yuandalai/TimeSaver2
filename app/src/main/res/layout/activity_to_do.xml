<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_todo"
        layout="@layout/title_todo"/>

    <TextView
        android:id="@+id/text_todo"
        android:textStyle="bold"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/accent_white"
        android:text="to do 的具体内容"
        android:background="@color/accent_amber"
        android:layout_below="@+id/title_todo"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/text_description"
        android:gravity="center_horizontal"
        android:textColor="@color/accent_white"
        android:text="description"
        android:background="@color/accent_amber"
        android:layout_below="@+id/text_todo"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:id="@+id/choose_date"
        android:layout_below="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="选择日期"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="May 15,2016"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/choose_date"
        android:id="@+id/gray_line1"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/choose_time"
        android:layout_below="@+id/gray_line1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="选择时间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="9:00am - 10:00am"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/choose_time"
        android:id="@+id/gray_line2"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/whole_day"
        android:layout_below="@+id/gray_line2"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="全天"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             />


    </RelativeLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/whole_day"
        android:id="@+id/gray_line6"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/remind_time"
        android:layout_below="@+id/gray_line6"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="提醒时间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="提前一个小时"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/remind_time"
        android:id="@+id/gray_line3"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/place"
        android:layout_below="@+id/gray_line3"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="地点"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="NONE"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/place"
        android:id="@+id/gray_line4"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/notification"
        android:layout_below="@+id/gray_line4"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="提醒时间"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="提前一个小时"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/notification"
        android:id="@+id/gray_line5"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/repeat"
        android:layout_below="@+id/gray_line5"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="重复"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/accent_black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="否"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/repeat"
        android:id="@+id/gray_line7"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/priority"
        android:layout_below="@+id/gray_line7"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/accent_black"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="优先级"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



        <RadioGroup
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:button="@drawable/shape_gray_check"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/radioButton5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
        </RadioGroup>


    </RelativeLayout>


</RelativeLayout>
</ScrollView>